{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@valueadd/common": ["libs/common/src/index.ts"],
      "@valueadd/common/local-storage": ["libs/common/src/lib/local-storage/index.ts"],
      "@valueadd/testing": ["libs/testing/src/index.ts"],
      "@valueadd/validation-messages": ["libs/validation-messages/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
